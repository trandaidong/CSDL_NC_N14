extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    #background

    .container-right
        .img-banner
            h1 SuShi Khoa học Tự nhiên
        form(
            action=`${prefixAdmin}/api/v1/auth/login`
            method='POST'
            id='login-form'
        )
            .logo-sushi
            .header-form
                h1 Đăng nhập
            
            .form-group-content.user-name
                label(for='username') 
                    p Email
                    input(
                        type='text' 
                        name='username' 
                        placeholder='Nhập email' 
                        id='username'
                        required=''
                    )
            .form-group-content.password
                label(for='password') 
                    p Mật khẩu
                    input(
                        type='text' 
                        name='password' 
                        placeholder='Nhập mật khẩu' 
                        id='password'
                        required='')
            button.btn.btn-login(
                type='submit'
            ) Đăng nhập
